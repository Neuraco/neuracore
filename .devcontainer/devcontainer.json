{
  "name": "Anaconda (Python 3)",
  "build": {
    "context": "..",
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers-extra/features/pre-commit:2": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.black-formatter",
        "streetsidesoftware.code-spell-checker",
        "ms-python.isort",
        "ms-python.python",
        "njpwerner.autodocstring"
      ]
    }
  },
  "runArgs": [
    "--network=host"
    // "--gpus=all"
  ]
}
